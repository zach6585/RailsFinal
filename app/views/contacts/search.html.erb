<!DOCTYPE HTML>
<html>
    <head>
        <script src="jquery-3.5.1.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    </head>
<% if !logged_in? %>
    <h1>You must log in before you see anything</h1>
<% else %>

<h1 style="text-align: center;">Search</h1>

<br><br>
    <%= form_with url: '/contacts/results', local: true do |f| %>
        <%= f.label :workers, "Which WBW workers?: " %>
        <%= f.select(:workers, options_from_collection_for_select(Worker.all, "id", "name"), {}, {:multiple => true, :class => "workers"}) %>
        <br><br>

        <%= f.label :company, "Company Name: " %>
        <%= f.text_field :company %>
        <br><br>

        <%= f.label :name, "Contact at company's name: " %>
        <%= f.text_field :name %>    
        <br><br>

        <%= f.label :email, "Contact at company's email: " %>
        <%= f.text_field :email %>    
        <br><br>

        <%= f.label :number, "Contact at company's phone number: " %>
        <%= f.text_field :number %>    
        <br><br>

        <%= f.label :old_address, "What is their old address?: " %>
        <%= f.text_field :old_address %>
        <br><br>

        <%= f.label :new_address, "What is their current address?: " %>
        <%= f.text_field :new_address %>
        <br><br>

        <%= f.label :category, "Which category is this ?: " %>
        <%= f.select :category, ["EU", "REB", "A&D", "PMfirm", "Other"], :include_blank => true %>
        <br><br>

        <%= f.label :broker, "Broker name: " %>
        <%= f.text_field :broker %>
        <br>
        
        <%= f.label :broker_company, "Broker company: " %>
        <%= f.text_field :broker_company %>
        <br>

        <%= f.label :broker_number, "Broker contact #: " %>
        <%= f.text_field :broker_number %> 
        <br><br>

        <%= f.label :architect, "Architect name: " %>
        <%= f.text_field :architect %>
        <br>

        <%= f.label :architect_company, "Architect company: " %>
        <%= f.text_field :architect_company %>
        <br>

        <%= f.label :architect_number, "Architect contact #: " %>
        <%= f.text_field :architect_number %> 
        <br><br>

        <%= f.label :consultant, "Consultant name: " %>
        <%= f.text_field :consultant %>
        <br>

        <%= f.label :consultant_company, "Consultant company: " %>
        <%= f.text_field :consultant_company %>
        <br>

        <%= f.label :consultant_number, "Consultant contact #: " %>
        <%= f.text_field :consultant_number %> 
        <br><br>

        <%= f.submit "Search" %>
        <a href="/">Cancel</a>
    <% end %>





<% end %>
<script type="text/javascript">
        
            $('.workers').select2({
            });
            </script>
</html>

